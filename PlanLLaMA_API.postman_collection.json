{
  "info": {
    "name": "PlanLLaMA API",
    "description": "Complete API collection for PlanLLaMA backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    }
  ],
  "item": [
    {
      "name": "Employees",
      "item": [
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/employees"
          }
        },
        {
          "name": "Get Employees by Role (PM)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/employees?role=pm"
          }
        },
        {
          "name": "Get Employees by Role (Executor)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/employees?role=executor"
          }
        },
        {
          "name": "Get Employee by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/employees/e03"
          }
        },
        {
          "name": "Get Employee Workload",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/employees/e03/workload"
          }
        },
        {
          "name": "Create Employee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": \"e07\",\n  \"name\": \"John Doe\",\n  \"role\": \"Frontend Developer\",\n  \"user_role\": \"executor\",\n  \"avatar\": \"JD\",\n  \"capacity_hours_per_week\": 40,\n  \"skills\": [{\"name\": \"react\", \"level\": 5}]\n}"
            },
            "url": "{{base_url}}/employees"
          }
        },
        {
          "name": "Update Employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"current_load_hours\": 25\n}"
            },
            "url": "{{base_url}}/employees/e07"
          }
        }
      ]
    },
